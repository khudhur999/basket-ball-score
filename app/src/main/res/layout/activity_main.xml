<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="The Final NBA Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_laleakers"
            android:id="@+id/imageView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_goldenwarieors"
            android:id="@+id/imageView2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leakersTextView" android:layout_marginTop="16dp"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goldenTextView" android:layout_marginTop="16dp"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="146dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/leakersTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp">
        <Button
                android:text="+1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/leakers1Button"/>
        <Button
                android:text="+2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/leakers2Button"/>
        <Button
                android:text="+3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/leakers3Button"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="147dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/goldenTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp" android:id="@+id/linearLayout">
        <Button
                android:text="+1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/golden1Button"/>
        <Button
                android:text="+2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/golden2Button"/>
        <Button
                android:text="+3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/golden3Button"/>
    </LinearLayout>
    <Button
            android:text="Full time"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:id="@+id/fullTimeButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Reset"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/resetButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fullTimeButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>